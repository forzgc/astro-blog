---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-cmn-Hans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="header-fixed">
        <div class="header-content">
          <div class="header-logo">
            <a href="/">FORZGC</a>
          </div>
        </div>
      </div>
    </header>
    <main>
      <div class="main-content">
        <slot />
      </div>
    </main>
    <footer>
      <div class="footer-content"></div>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    --content-width: 1200px;
  }
  html {
    background-color: #f6f6f6;
  }
  body {
    margin: 0;
  }
  header {
    height: 60px;
  }
  main {
    padding: 20px 0;
  }
  footer {
    background-color: #ccc;
  }
  .header-fixed {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
    height: 60px;
    background-color: #fff;
  }
  .header-content {
    width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
    height: 100%;
    display: flex;
    align-items: center;
  }
  .header-logo {
    font-size: 24px;
    color: #2468ac;
  }
  .main-content {
    width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }
  .footer-content {
    width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }
</style>
